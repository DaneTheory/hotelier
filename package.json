{
  "name": "hotelier",
  "author": {
    "name": "Martin Cavoj",
    "email": "martincavoj@gmail.com"
  },
  "license": "MIT",
  "description": "Tray App for Hotel Process Manager",
  "version": "0.2.0",
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.8.2",
    "ansi2html": "^0.0.1",
    "bootstrap": "^4.3.1",
    "electron-traywindow-positioner": "^0.0.2",
    "escape-html": "^1.0.3",
    "is-electron": "^2.1.0",
    "jquery": "^3.4.1",
    "lodash": "^4.17.11",
    "node-sass": "^4.12.0",
    "popper.js": "^1.15.0",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-router-dom": "^4.3.1",
    "react-scripts": "3.0.1",
    "react-transition-group": "~2.4",
    "tail": "^1.2.4"
  },
  "devDependencies": {
    "electron": "^5.0.2",
    "electron-builder": "^20.41.1",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^5.16.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.7.0",
    "eslint-plugin-react": "^7.7.0",
    "eslint-plugin-standard": "^3.0.1",
    "foreman": "^2.0.0",
    "jest-fetch-mock": "^1.5.0",
    "react-test-renderer": "^16.3.2",
    "typescript": "^3.4.5"
  },
  "main": "public/electron.js",
  "homepage": "./",
  "proxy": "http://localhost:2000/",
  "scripts": {
    "start": "nf start -p 3000",
    "react-start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron-start": "node src/electron-wait-react",
    "electron:build": "build",
    "postbuild": "build",
    "lint": "eslint src",
    "fixcode": "eslint src --fix"
  },
  "jest": {
    "coverageReporters": [
      "json",
      "lcov",
      "text-summary"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!**/node_modules/**",
      "!src/index.js",
      "!src/electron-wait-react.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "build": {
    "appId": "com.macav.hotelier",
    "productName": "Hotelier",
    "electronVersion": "5.0.0",
    "asar": true,
    "mac": {
      "extendInfo": {
        "LSUIElement": 1
      },
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": [
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Development",
      "icon": "build/icon.ico"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "build/icon.ico"
    },
    "files": [
      "build/**/*",
      "build/icon.*"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
