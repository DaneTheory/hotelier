{
  "name": "hotelier",
  "author": {
    "name": "Martin Cavoj",
    "email": "martincavoj@gmail.com"
  },
  "license": "MIT",
  "description": "Tray App for Hotel Process Manager",
  "version": "0.1.2",
  "dependencies": {
    "is-electron": "^2.1.0",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-scripts": "1.1.4"
  },
  "devDependencies": {
    "electron": "^2.0.0",
    "electron-builder": "^20.11.1",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "foreman": "^2.0.0",
    "jest-fetch-mock": "^1.5.0",
    "react-test-renderer": "^16.3.2"
  },
  "main": "public/electron.js",
  "homepage": "./",
  "proxy": "http://localhost:2000/",
  "scripts": {
    "start": "nf start -p 3000",
    "react-start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron-start": "node src/electron-wait-react",
    "electron:build": "build",
    "postbuild": "build"
  },
  "jest": {
    "coverageReporters": [
      "json",
      "lcov",
      "text-summary"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!**/node_modules/**",
      "!src/index.js",
      "!src/electron-wait-react.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "build": {
    "appId": "com.macav.hotelier",
    "productName": "Hotelier",
    "electronVersion": "2.0.0",
    "asar": true,
    "mac": {
      "extendInfo": {
        "LSUIElement": 1
      },
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": [
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Development",
      "icon": "build/icon.ico"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "build/icon.ico"
    },
    "files": [
      "build/**/*",
      "build/icon.*"
    ]
  }
}
